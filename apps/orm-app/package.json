{
  "name": "orm-app",
  "version": "0.0.2-alpha.3",
  "description": "A project created by app-tsdown",
  "private": "true",
  "scripts": {
    "clean": "pnpm exec rimraf ./dist",
    "dev": "pnpm exec cross-env NODE_OPTIONS=--enable-source-maps npm run dev:tsdown",
    "dev:tsx": "pnpm --parallel tsx:watch typecheck:watch",
    "dev:tsdown": "pnpm exec cross-env NODE_ENV=local pnpm --parallel build:tsdown:watch typecheck:watch",
    "dev:tsc": "NODE_ENV=local npm run build:tsc:watch -- --onSuccess \"npm start\"",
    "tsx": "pnpm exec cross-env NODE_ENV=local pnpm exec tsx src/main.ts",
    "tsx:watch": "pnpm exec cross-env NODE_ENV=local pnpm exec tsx watch src/main.ts",
    "migrate:drizzle": "pnpm exec cross-env NODE_OPTIONS=--enable-source-maps pnpm exec tsx src/scripts/migrate-drizzle.ts",
    "migrate:kysely": "pnpm exec cross-env NODE_OPTIONS=--enable-source-maps pnpm exec tsx src/scripts/migrate-kysely.ts",
    "migrate:typeorm": "pnpm exec cross-env NODE_OPTIONS=--enable-source-maps pnpm exec tsx src/scripts/migrate-typeorm.ts",
    "migrate:prisma": "pnpm exec cross-env NODE_OPTIONS=--enable-source-maps pnpm exec tsx src/scripts/migrate-prisma.ts",
    "start": "node dist/main.js",
    "start:watch1": "pnpm exec nodemon dist/main.js",
    "start:watch": "pnpm exec nodemon --ext js --exec \"node dist/main.js\"",
    "start:tsc": "pnpm --parallel build:tsc start",
    "build": "npm run build:tsdown",
    "build:tsdown": "npm run clean && tsdown --config-loader unrun",
    "build:tsdown:watch": "npm run clean && tsdown --config-loader unrun --watch",
    "build:tsc": "npm run clean && pnpm exec tsc -p tsconfig.build.json",
    "build:tsc:watch": "npm run clean && pnpm exec tsc-watch -p tsconfig.app.json",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "lint-staged": "pnpm exec lint-staged",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "npm run vitest:run",
    "test:e2e": "npm run vitest:e2e:run",
    "vitest": "vitest --passWithNoTests",
    "vitest:run": "vitest --passWithNoTests --run",
    "vitest:ui": "vitest --passWithNoTests --ui",
    "vitest:e2e": "vitest --config vitest.config.e2e.mts --passWithNoTests",
    "vitest:e2e:run": "vitest --config vitest.config.e2e.mts --passWithNoTests --run",
    "vitest:e2e:ui": "vitest --config vitest.config.e2e.mts --passWithNoTests --ui",
    "commit": "pnpm exec cz",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "_moduleAliases": {
    "@": "./dist"
  },
  "lint-staged": {
    "*.ts": [
      "pnpm exec vitest related --run",
      "pnpm exec prettier --write",
      "pnpm exec eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "keywords": [],
  "author": "Roy Chuang",
  "license": "ISC",
  "engines": {
    "node": ">=18",
    "pnpm": ">=10.24.0 <11.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@commitlint/cz-commitlint": "^19.6.1",
    "@eslint/js": "^9.20.0",
    "@prisma/client": "^7.2.0",
    "@types/dotenv-flow": "^3.3.3",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-istanbul": "^3.2.3",
    "@vitest/ui": "^3.2.3",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "husky": "^9.1.7",
    "inquirer": "9",
    "lint-staged": "^15.4.3",
    "pg": "^8.16.3",
    "prettier": "^3.5.1",
    "prisma": "^7.2.0",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "tsdown": "^0.17.3",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.0",
    "vitepress": "^1.6.3",
    "vitest": "^3.2.3"
  },
  "dependencies": {
    "@rfjs/orm-drizzle": "workspace:*",
    "@rfjs/orm-kysely": "workspace:*",
    "@rfjs/orm-prisma": "workspace:*",
    "@rfjs/orm-typeorm": "workspace:*",
    "dotenv-flow": "^4.1.0"
  }
}