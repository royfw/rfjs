{
  "name": "koa-esbuild",
  "version": "0.0.0",
  "description": "A project created by starter-ts-koa",
  "private": true,
  "scripts": {
    "clean": "npx rimraf ./dist",
    "build": "npm run build:esbuild",
    "dev": "npm run dev:esbuild",
    "dev:esbuild": "NODE_ENV=local npm run clean && npx npm-run-all --parallel build:esbuild:watch",
    "dev:tsc": "NODE_ENV=local npm run clean &&  npm run build:tsc:watch -- --onSuccess \"npm start\"",
    "start": "node dist/main.js",
    "start:watch1": "npx nodemon dist/main.js",
    "start:watch": "npx nodemon --ext js --exec \"node dist/main.js\"",
    "start:tsc": "npx npm-run-all --parallel build:tsc start",
    "build:esbuild": "npm run clean && node esbuild.build.mjs",
    "build:esbuild:watch": "npm run clean && node esbuild.dev.mjs",
    "build:tsc": "npm run clean && npx tsc -p tsconfig.build.json",
    "build:tsc:watch": "npm run clean && npx tsc-watch -p tsconfig.app.json",
    "typecheck": "tsc --noEmit -p tsconfig.esbuild.json",
    "typecheck:watch": "tsc -p tsconfig.esbuild.json --noEmit --watch",
    "lint-staged": "npx lint-staged",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "npm run vitest:run",
    "test:e2e": "npm run vitest:e2e:run",
    "vitest": "vitest --passWithNoTests",
    "vitest:run": "vitest --passWithNoTests --run",
    "vitest:ui": "vitest --passWithNoTests --ui",
    "vitest:e2e": "vitest --config vitest.config.e2e.mts --passWithNoTests",
    "vitest:e2e:run": "vitest --config vitest.config.e2e.mts --passWithNoTests --run",
    "vitest:e2e:ui": "vitest --config vitest.config.e2e.mts --passWithNoTests --ui",
    "commit": "npx cz",
    "prepare": "npx husky",
    "preinstall": "npx -y only-allow pnpm",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "_moduleAliases": {
    "@": "./dist"
  },
  "lint-staged": {
    "*.ts": [
      "npx vitest related --run",
      "npx prettier --write",
      "npx eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "keywords": [],
  "author": "Roy Chuang",
  "license": "ISC",
  "packageManager": "pnpm@10.24.0",
  "engines": {
    "node": ">=18",
    "pnpm": ">=10.24.0 <11.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@commitlint/cz-commitlint": "^19.6.1",
    "@eslint/js": "^9.20.0",
    "@koa/cors": "^5.0.0",
    "@types/dotenv-flow": "^3.3.3",
    "@types/koa": "^2.15.0",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-logger": "^3.1.5",
    "@types/koa__cors": "^5.0.0",
    "@types/koa__router": "^12.0.4",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-istanbul": "^3.2.3",
    "@vitest/ui": "^3.2.3",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.25.2",
    "esbuild-plugin-tsc": "^0.5.0",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "fast-glob": "^3.3.3",
    "husky": "^9.1.7",
    "inquirer": "9",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.1",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.0",
    "vitepress": "^1.6.3",
    "vitest": "^3.2.3"
  },
  "dependencies": {
    "@koa/bodyparser": "^6.0.0",
    "@koa/multer": "^4.0.0",
    "@koa/router": "^13.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "class-validator-jsonschema": "^5.0.2",
    "cors": "^2.8.5",
    "dotenv-flow": "^4.1.0",
    "http-status": "^2.1.0",
    "koa": "^3.0.0",
    "koa-logger": "^4.0.0",
    "koa2-swagger-ui": "^5.11.0",
    "module-alias": "^2.2.3",
    "multer": "^2.0.1",
    "openapi3-ts": "3.2.0",
    "reflect-metadata": "^0.2.2",
    "routing-controllers": "^0.11.2",
    "routing-controllers-openapi": "^5.0.0",
    "tslib": "^2.8.1",
    "tsyringe": "^4.10.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  }
}